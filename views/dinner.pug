extends layout

block content
    h2=title
    p These items go well as an end-of-day meal
    div(class='menu-container')
        for item in config.menu.Dinner
            div(class='menu-card')
                img(src=item[3] class='menu-card-img')
                div(class='menu-card-item') #{item[0]}
                div(class ='menu-card-desc')
                    div(class='menu-card-desc-text') #{item[1]}
                div(class='menu-card-price') #{item[2]}